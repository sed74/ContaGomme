<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tire_button_height"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/tire_rectangle_shadow"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:padding="@dimen/listview_padding"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Michelin" />

    <ImageView
        android:id="@+id/handle"
        android:layout_width="?listPreferredItemHeight"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/margin_default"
        android:padding="@dimen/listview_padding"
        android:scaleType="center"
        android:src="@drawable/ic_reorder_grey_500_24dp"

        />

    <TextView
        android:id="@+id/brand_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/delete_button"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:padding="@dimen/listview_padding"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone"

        tools:text="1" />


</RelativeLayout>