<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/tire_rectangle_shadow"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:padding="@dimen/listview_padding"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="Michelin" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_default"
        android:padding="@dimen/listview_padding"
        android:src="@drawable/ic_delete_black_24dp" />

    <TextView
        android:id="@+id/brand_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/delete_button"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:padding="@dimen/listview_padding"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone"

        tools:text="1" />

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/brand_order"
        android:paddingLeft="@dimen/tire_up_down_button_padding"
        android:paddingRight="@dimen/tire_up_down_button_padding"

        android:src="@drawable/ic_arrow_up_thick_black_24dp" />

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/up_arrow"
        android:paddingLeft="@dimen/tire_up_down_button_padding"
        android:paddingRight="@dimen/tire_up_down_button_padding"
        android:src="@drawable/ic_arrow_down_thick_black_24dp" />

</RelativeLayout>