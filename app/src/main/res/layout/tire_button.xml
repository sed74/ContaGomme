<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/tire_rectangle"
    android:orientation="horizontal"
    tools:context="com.marchesi.federico.contagomme.MainActivity">


    <TextView
        android:id="@+id/rear_tire"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/tire_button_external_padding"
        android:text="@string/rear_tire"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/rear_tire_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/tire_button_padding"
        android:paddingRight="@dimen/tire_button_padding"
        android:text="0"
        android:textColor="@android:color/darker_gray"
        tools:text="100" />

    <TextView
        android:id="@+id/tire_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Michelin" />

    <TextView
        android:id="@+id/front_tire_count"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/tire_button_padding"
        android:paddingRight="@dimen/tire_button_padding"
        android:text="0"
        android:textColor="@android:color/darker_gray"
        tools:text="100" />

    <TextView
        android:id="@+id/front_tire"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/tire_button_external_padding"
        android:text="@string/front_tire"
        android:textColor="@android:color/black" />


</LinearLayout>