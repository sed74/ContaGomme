<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sed.willy.contagomme">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sed.willy.contagomme.SettingsActivity"
            android:label="@string/title_activity_settings">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sed.willy.contagomme.EntryActivity" />
        </activity>
        <activity
            android:name="com.sed.willy.contagomme.BrandListActivity"
            android:label="@string/brand_list_activity_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sed.willy.contagomme.EntryActivity" />
        </activity>
        <activity
            android:name="com.sed.willy.contagomme.RaceListActivity"
            android:label="@string/race_list_activity_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sed.willy.contagomme.EntryActivity" />
        </activity>
        <activity
            android:name="com.sed.willy.contagomme.wheelcount.WheelCountPerRaceActivity"
            android:label="@string/race_list_activity_name">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sed.willy.contagomme.EntryActivity" />
        </activity>
        <activity android:name="com.sed.willy.contagomme.EntryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>